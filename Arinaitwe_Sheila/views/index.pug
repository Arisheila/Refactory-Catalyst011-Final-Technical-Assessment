doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(href='/index.css' rel='stylesheet')
  title  Covid Registration Form 
.container
  form(name='registration' onblur='firstFocus()' action="/covid" method="POST" onsubmit=' return Validation()')
    img(src='form-header-image.png')
    p.fs-6.text-center Ministry of Health
    p.fs-2.text-center COVID-19(CORONA VIRUS)
    p.fs-6.text-center Virus-Test Registration Form
    .row
      .col-6
        label Surname
        input.form-control(type='text' name='surname' onblur='valSur()' )
        p.one
      .col-6
        label Given name
        input.form-control(type='text' name='given' onblur='ValGi()')
        p.two
    .row
      .col-6
        label Date of birth
        input.form-control(type='date' name='date')
        p.three
      .col-6
        label Place of Residence
        input.form-control(type='text' name='placeofresidence')
        p.four
    .row
      .col-6
        label Occupation
        input.form-control(type='text' name='occupation')
        p.five
      .col-6
        label Nationality
        input.form-control(type='text' name='nationality')
        p.six
    .row
      .col-12
        label Gender
        br
        |      Male :
        input(type='radio' name='gender' value="male" required='')
        |      Female :
        input(type='radio' name='gender' value="female")
    .row
      .col-6
        label Category
        select.form-control
          option Default
          option Returnee
          option Contact
          option Alert
          option Volunteer
        p.six
      button.btn-primary.btn-sm(type='submit') register
  script(src='index.js')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
